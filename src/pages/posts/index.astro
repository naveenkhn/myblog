---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import PostCard from '../../components/PostCard.astro';

const posts = (await getCollection('tech', ({ data }) => !data.draft)).sort(
  (a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf()
);
---

<BaseLayout title="All Posts | Naveen's Blog" description="All technical posts from Naveen's blog.">
  <section class="hero">
    <h1>All Posts</h1>
    <p>Every technical note and tutorial, sorted by latest first.</p>
  </section>

  <section class="posts-grid" style="margin-top: 1.2rem;">
    {posts.map((post) => (
      <PostCard
        title={post.data.title}
        summary={post.data.summary}
        publishDate={post.data.publishDate}
        href={`/posts/${post.id}/`}
        tags={post.data.tags}
      />
    ))}
  </section>
</BaseLayout>
