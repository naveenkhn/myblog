---
import { getCollection } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';
import PostCard from '../components/PostCard.astro';

const posts = (await getCollection('tech', ({ data }) => !data.draft)).sort(
  (a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf()
);

const featuredPost = posts.find((post) => post.data.featured) ?? posts[0];
const otherPosts = posts.filter((post) => post.id !== featuredPost?.id);
---

<BaseLayout title="Naveen's Technical Blog" description="Engineering notes, systems design ideas, and practical dev workflows.">
  <section class="hero">
    <h1>Ideas, experiments, and engineering notes.</h1>
    <p>
      I write about practical software engineering: architecture decisions, debugging workflows, and building reliable systems.
      New posts are published on a steady cadence.
    </p>
  </section>

  {featuredPost && (
    <section class="posts-grid" style="margin-top: 1.2rem;">
      <PostCard
        title={featuredPost.data.title}
        summary={featuredPost.data.summary}
        publishDate={featuredPost.data.publishDate}
        href={`/posts/${featuredPost.id}/`}
        tags={featuredPost.data.tags}
      />
    </section>
  )}

  <section class="posts-grid" aria-label="Recent posts">
    {otherPosts.slice(0, 6).map((post) => (
      <PostCard
        title={post.data.title}
        summary={post.data.summary}
        publishDate={post.data.publishDate}
        href={`/posts/${post.id}/`}
        tags={post.data.tags}
      />
    ))}
  </section>
</BaseLayout>
