---
interface Props {
  title: string;
  summary: string;
  publishDate: Date;
  href: string;
  tags?: string[];
}

const { title, summary, publishDate, href, tags = [] } = Astro.props;
---

<article class="post-card">
  <div class="meta">
    <time datetime={publishDate.toISOString()}>{publishDate.toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' })}</time>
    {tags.slice(0, 3).map((tag) => <span class="tag">{tag}</span>)}
  </div>
  <h3>
    <a href={href}>{title}</a>
  </h3>
  <p>{summary}</p>
</article>
